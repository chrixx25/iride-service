{
    "extends": [
      "airbnb-base",
      "eslint:recommended",
      "plugin:node/recommended",
      "prettier"
    ],
    "plugins": ["prettier"],
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
      "arrow-body-style": ["error", "as-needed"],
      "no-plusplus": "off",
      "prettier/prettier": ["error", {}, { "usePrettierrc": true }],
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "import/no-extraneous-dependencies": ["error", {"devDependencies": false}]
    }
}
